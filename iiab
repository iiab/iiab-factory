if ! $(ischroot -t); then
    echo -ne "HIT [Enter] TO REBOOT, CONFIRMING YOU'VE" '"photographed" THE ABOVE PARAGRAPHS: '
    read ans < /dev/tty

    # Sets hostname, improves RTC + memory mgmt, starts BitTorrents if needed, etc!
    reboot
